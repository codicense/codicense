{
  "name": "codicense",
  "version": "1.0.0",
  "description": "An offline CLI that analyzes dependency license data and explains risk and impact.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codicense": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run",
    "version": "npm run build"
  },
  "keywords": [
    "license",
    "compliance",
    "spdx",
    "dependency",
    "security",
    "legal",
    "open-source",
    "gpl",
    "mit",
    "apache",
    "copyleft",
    "license-checker",
    "license-compliance",
    "oss-compliance"
  ],
  "author": "CODICENSE Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codicense/codicense.git"
  },
  "bugs": {
    "url": "https://github.com/codicense/codicense/issues"
  },
  "homepage": "https://github.com/codicense/codicense",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "spdx-expression-parse": "^4.0.0",
    "spdx-license-list": "^6.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
